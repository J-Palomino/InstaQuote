            <option value="2">2-4 Business Days</option>
            <option value="3">5" x 7"</option>
            <option value="4">6.5" x 9"</option>
            <option value="5">6" x 11"</option>
        </select>
        <div class="input-group-append">
            <label class="input-group-text" for="inputGroupSelect02">Options</label>
        </div>
    </div>


    <div class="input-group optionSelection">
        <input type="text" placeholder="Current Estimate" class=" start form-control"
            aria-label="Dollar amount (with dot and two decimal places)">
        <div class="input-group-append">
            <span class="input-group-text">$</span>
            <span class="input-group-text">0.00</span>
