    <div class="row">
        <div class="input-group mb-4 mt-4">
            <select class="custom-select" id="servicesGeneral">
                <option selected>Choose...</option>
                <option value="1">Digital Printing</option>
                <option value="2">Stickers</option>
                <option value="3">Cut Vinyl</option>
                <option value="3">Banners</option>
                <option value="3">Brochures</option>
                <option value="3">Business Cards</option>
                <option value="3">Posters</option>
                <option value="3">Canvas Prints</option>
                <option value="3">Flyers</option>
            </select>
            <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect02">Product Type</label>
            </div>
        </div>
    </div>

    <div class="input-group mb-4 optionSelection">
        <select class="custom-select start" id="quantity">
            <option selected>How Many Would You Like...</option>
            <option value="1">500</option>
            <option value="2">1000</option>
            <option value="3">2000</option>
            <option value="4">2500</option>
            <option value="5">5000</option>
            <option value="6">10000</option>
            <option value="7">20000</option>
        </select>
        <div class="input-group-append">
            <label class="input-group-text" for="inputGroupSelect02">Options</label>
        </div>
    </div>

    <div class="input-group mb-4 optionSelection">
        <select class="custom-select start businessCard" id="businessSize">
            <option selected>What Size Would You Like...</option>
            <option value="1">14pt C2S</option>
            <option value="2">16pt C2S</option>
            <option value="3">100# Linen</option>
        </select>
        <div class="input-group-append">
